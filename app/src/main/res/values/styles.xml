<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/myBlack</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">#9F9F9F</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Style_Dialog_Rounded_Corner" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

</resources>